<% include ./partials/header %>
<h1 class="ui header center aligned">The Grand Film Workshop Event</h1>

<% blogs.forEach(function(blog){ %>
<div class="ui container segment">
    <div class="ui segment">
        <h2 class="ui header">
            Film Name : <%= blog.name %>
        </h2>
    </div>
    <div class="ui raised segment">
        <h4 class="ui header">IMAGE Of Event</h2>
        <img class="ui small rounded  image" src="<%=blog.image%>">
    </div>
    <div class="ui raised segment">
        <p><%=blog.body.substring(0,50)%><em>...</em></p>
        <a href="/blogs/<%=blog._id%>">READ MORE!!!</a>
    </div>
    
    <a class="ui  blue basic button" href="/blogs/<%=blog._id%>/edit">Edit details - Admin</a>
    <form action="/blogs/<%=blog.id%>?_method=DELETE" method="POST">
    <button class="ui  red basic button">DELETE</button>
    </form>
    <div>
        <span>Date created : <%=blog.date%></span>
    </div>
    
    
</div>

<% }) %>

</div>
<% include ./partials/footer %>